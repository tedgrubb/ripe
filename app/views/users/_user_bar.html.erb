<div id="user_bar">
<% if logged_in? -%>
  <div class="logged_in">
    <span id="user-bar-greeting">Signed in as <%= link_to current_user.name, my_home_path %></span>
    <span class="divider">|</span>
    <span><%= link_to "Settings", edit_user_path(current_user) %></span>
    <span class="divider">|</span>
    <span><%= link_to_function "Feedback", "feedback_widget.show();" %></span>
    <span class="divider">|</span>
    <span id="user-bar-action"><%= link_to "Sign out", logout_path %></span>
  </div>
<% else -%>
  <span id="user-bar-action">
    <%= link_to "Log in", login_path,  { :title => "Log in" } %>
    <span class="divider">|</span>
    <%= link_to "Sign up", signup_path, :style => "font-weight:bold" %>
  </span>
<% end -%>
</div>