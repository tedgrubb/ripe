    = render :partial => 'layouts/common/category_nav'
  =partial "recipes/ads/adsense_300x250"
.main
  = partial '/layouts/common/ingredients_nav'
  .catalog
    - unless @ingredients.empty?
      = render :partial => 'ingredients/ingredient', :collection => @ingredients
    - else
      No 
