<div id="login">
  <h2>Log In</h2>

  <% if flash[:error] %>
    <div class="errors">
      <%= flash[:error] %>
      <%= error_messages_for :user %>
    </div>
  <% end %>

  <% form_tag session_path do -%>
    <dl id="login_form">
      <dd>
        <%= text_field_tag 'email', "Email", :class => "prompted", :onfocus => "new Prompted(this)" %>
      </dd>
      <dd>
        <%= password_field_tag 'password', "Password", :class => "prompted", :onfocus => "new Prompted(this)" %>
      </dd>
    </dl>

      <!-- <div><%= check_box_tag 'remember_me', '1', @remember_me %> <label for="remember_me" style="vertical-align:top">Remember me</label></div> -->
    <p>
      <%= submit_tag 'Log in' %>
    </p>

  <% end -%>
</div>